{
  "name": "scrubadub",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npx convex deploy --cmd 'npm run build -w packages/frontend'",
    "dev": "concurrently \"npx convex dev\" \"npm run dev -w packages/frontend\"",
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev:convex": "npx convex dev"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@vercel/blob": "^2.3.0",
    "bcryptjs": "^3.0.3",
    "convex": "^1.31.7",
    "stripe": "^20.3.1"
  }
}
